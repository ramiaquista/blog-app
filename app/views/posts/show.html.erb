<% if @posts.blank? %>
<p>This post does not exist.</p>
<% else %>
<div id='post-container'>
    <div id='post-info-container'>
        <h1><%= @post.title %> by <%= @post.author_id %> </h1><p><%= post.comments_counter%> - <%= post.likes_counter %></p><br />
        <p><%= @post.text %></p>
    </div>
    <div id='post-comments-container'>
        <%= post.comments each do |comment|%>
            <p><%= comment.author_id%> : <%= comment.text %></p>
        <% end %>
    </div>
</div>
<%= link_to "Delete", user_posts_path(@post), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } if can? :destroy, Post %>
<% end %>