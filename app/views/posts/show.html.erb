<div id='post-container'>
    <div id='post-info-container'>
        <h1><%= @post.title %> by <%= @post.author_id %> </h1><p><%= post.comments_counter%> - <%= post.likes_counter %></p><br />
        <p><%= @post.text %></p>
    </div>
    <div id='post-comments-container'>
        <%= post.comments each do |comment|%>
            <p><%= comment.author_id%> : <%= comment.text %></p>
        <% end %>
    </div>
</div>